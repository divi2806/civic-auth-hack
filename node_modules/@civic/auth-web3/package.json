{
  "name": "@civic/auth-web3",
  "version": "0.5.7",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs/index.d.ts",
      "import": "./dist/nextjs/index.js",
      "require": "./dist/nextjs/index.js"
    },
    "./nextjs/middleware": {
      "types": "./dist/nextjs/middleware/index.d.ts",
      "import": "./dist/nextjs/middleware/index.js",
      "require": "./dist/nextjs/middleware/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js"
    },
    "./react": {
      "types": "./dist/reactjs/index.d.ts",
      "import": "./dist/reactjs/index.js",
      "require": "./dist/reactjs/index.js"
    },
    "./wagmi": {
      "types": "./dist/wagmi/index.d.ts",
      "import": "./dist/wagmi/index.js",
      "require": "./dist/wagmi/index.js"
    }
  },
  "scripts": {
    "prebuild": "yarn generate-version",
    "build": "tsc",
    "lint": "eslint src/",
    "lint:fix": "yarn lint --fix",
    "pretest": "yarn generate-version",
    "test": "vitest",
    "prepublishOnly": "yarn generate-version && node ../../etc/scripts/prompt-changelog.js && yarn build",
    "generate-version": "npx tsx ./src/generateVersion.ts"
  },
  "dependencies": {
    "@civic/auth": "0.5.2",
    "@noble/hashes": "^1.5.0",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-standard-features": "^1.3.0",
    "@solana/web3.js": "^1.98.0",
    "@wallet-standard/base": "^1.1.0",
    "@wallet-standard/features": "^1.1.0",
    "bs58": "^6.0.0",
    "eventemitter3": "^5.0.1",
    "events": "^3.3.0",
    "jwt-decode": "^4.0.0",
    "metakeep": "^2.2.8",
    "tslib": "^2.7.0",
    "viem": "^2.21.44"
  },
  "peerDependencies": {
    "@solana/wallet-adapter-react": "^0.15.35",
    "@tanstack/react-query": "^5.56.2",
    "next": ">=14",
    "react": ">=18",
    "wagmi": "^2.12.29"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": {
      "optional": true
    },
    "react": {
      "optional": false
    },
    "next": {
      "optional": true
    },
    "wagmi": {
      "optional": true
    },
    "@solana/wallet-adapter-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.56.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@vitejs/plugin-react": "^4.3.3",
    "jsdom": "^25.0.1",
    "next": "14.2.24",
    "react": "^18",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "viem": "^2.21.44",
    "vite-plugin-mock": "^3.0.2",
    "vitest": "^2.1.1",
    "wagmi": "^2.12.29"
  }
}
